package {	import flash.display.*;	import flash.events.*;		public class GreenBox extends MovieClip {		private var my_bitmap:BitmapData;		private var image:Bitmap;				public function GreenBox() {			my_bitmap = new BitmapData( 228, 228, false, 0x000000 );			addEventListener( Event.ENTER_FRAME, make_noise, false, 0, true );			image = new Bitmap( my_bitmap );			addChild( image );		}				private function make_noise( evt:Event ):void {			var n = Math.round( Math.random() * 9999999 );			my_bitmap.noise( n, 0, 255, 7, false );		}				public function destroy():void {			removeEventListener( Event.ENTER_FRAME, make_noise );		}	}}